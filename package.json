{
  "name": "marp-theme-kiel-university",
  "version": "0.0.1",
  "main": "src/theme.scss",
  "description": "Marp themes in the style of Kiel University",
  "repository": "https://github.com/YorikHansen/marp-theme-kiel-university",
  "author": "Yorik Hansen",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "sass --pkg-importer=node src/themes:tmp && postcss tmp/*.css --dir dist",
    "postbuild": "del-cli tmp",
    "watch": "npm-run-all --parallel watch:sass watch:postcss",
    "watch:sass": "sass --pkg-importer=node --watch src/themes:tmp",
    "watch:postcss": "postcss tmp/*.css --watch --dir dist"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "del-cli": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-banner": "^4.0.1",
    "postcss-cli": "^11.0.0",
    "postcss-font-magician": "^4.0.0",
    "postcss-image-inliner": "^7.0.1",
    "postcss-normalize": "^13.0.1",
    "postcss-remote-font-inliner": "^2.0.0",
    "sass": "^1.85.1"
  },
  "dependencies": {}
}
